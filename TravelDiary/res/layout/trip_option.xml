<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="247dp"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="20dp">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/txtTripTagName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trip Tags:" />
		</TableRow>
		<TableRow 
		    android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <EditText
                android:id="@+id/editTripTagName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:hint="Enter Name"
                android:singleLine="true">
                <requestFocus />
            </EditText>

        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="240dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/associateFriend"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Associate Friend to Trip:" />
        </TableRow>
		<TableRow
            android:id="@+id/tableRow4"
            android:layout_width="240dp"
            android:layout_height="wrap_content" >    
            <Spinner
                android:id="@+id/cmbFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtFriendPermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friend Permissions:" />
        </TableRow>
		<TableRow
            android:id="@+id/tableRow6"
            android:layout_width="200dp"
            android:layout_height="wrap_content" >  
            <Spinner
                android:id="@+id/cmbFriendsPermissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="200dp"
            android:layout_height="wrap_content" >
			<Button
                android:id="@+id/tripFriendSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Friend" />
		</TableRow>
		<TableRow
            android:id="@+id/tableRow8"
            android:layout_width="200dp"
            android:layout_height="wrap_content" > 	
            <Button
                android:id="@+id/tripTagSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Tag" />
        </TableRow>
		<TableRow
            android:id="@+id/tableRow9"
            android:layout_width="200dp"
            android:layout_height="wrap_content" >    
            
		    <Button
                android:id="@+id/tripEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Trip" />

        </TableRow>
    </TableLayout>

</LinearLayout>