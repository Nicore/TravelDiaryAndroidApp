<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="500dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/micLive"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/live_mic"
        android:gravity="center_horizontal"
        android:padding="10dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|fill" >

		<TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/txtAudioName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio Name:" />
        </TableRow>
		<TableRow
		    android:id="@+id/tableRow2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/editAudioName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:singleLine="true" >

                <requestFocus />
            </EditText>
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="240dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/txtAudioDescription"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Audio Description:" />  
        </TableRow>
        
		<TableRow
            android:id="@+id/tableRow4"
            android:layout_width="240dp"
            android:layout_height="wrap_content" >        
        	<EditText
                android:id="@+id/editAudioDescription"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:ems="2"
                android:singleLine="true"
                android:hint="Enter Description" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="240dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/txtAudioTags"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Audio Tags:" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="240dp"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/editAudioTags"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:ems="10" 
                android:singleLine="true"
                android:hint="Enter Tag"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/recButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"                
                android:text="Start" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="240dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/cancelButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"                
                android:text="Cancel" />
         </TableRow> 
    </TableLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textColor="#FFF" />

</LinearLayout>