<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/txtPhotoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Name:" />
            <EditText
                android:id="@+id/editPhotoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/txtPhotoDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Description:" />
            <EditText
                android:id="@+id/editPhotoDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10" />
        </TableRow>
        
         <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/txtPhotoTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo Tags:" />
            <EditText
                android:id="@+id/editPhotoTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10" android:lines="6"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >
            <Button
                android:id="@+id/photoSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Save" />
            <Button
                android:id="@+id/photoCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cancel" />
        </TableRow>
    </TableLayout>
</LinearLayout>