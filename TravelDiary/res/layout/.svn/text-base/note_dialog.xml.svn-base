<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/txtNoteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note Name:" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        	<EditText
                android:id="@+id/editNoteName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
				android:hint="Enter Name"
                android:singleLine="true" >
                <requestFocus />
            </EditText>
         </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="240dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/txtNoteDescription"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Note Description:" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="240dp"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/editNoteDescription"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:ems="10" 
                android:singleLine="true"
                android:hint="Enter Description"/>
          </TableRow>  
         <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="240dp"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/txtNoteTags"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Note Tags:" />
		 </TableRow>
		 <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="240dp"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/editNoteTags"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:ems="10" 
                android:singleLine="true"
                android:hint="Enter Tag"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/noteSave"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Save" />
        </TableRow>
		<TableRow
            android:id="@+id/tableRow8"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/noteCancel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Cancel" />
        </TableRow>
    </TableLayout>

</LinearLayout>